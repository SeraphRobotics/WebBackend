extends layout
block body
  h2.text-center Global Overview
  .small-10.column.small-centered(ng-controller="globerView")
    h3.text-center Machines
    .divider
    h4.text-left Overview
    form(name="date.range").row.collapse
      .small-3.column
        span.prefix Date Range
      .small-3.column
        input(
          type="date"
          ng-model="startDate"
          ng-change="startDateCap()"
          required)
      .small-3.column
        input(
          type="date"
          ng-model="endDate"
          ng-change="endDateCap()"
          required)
      .small-3.column
        span.postfix.button(ng-click="updateData(startDate, endDate)") Update
    .row.collapse
      .small-3.column
        span.alert-box Printers
      .small-3.column
        span.alert-box.secondary {{ printers.made }}
      .small-3.column
        span.alert-box.secondary {{ printers.shipped }}
      .small-3.column
        span.alert-box.secondary {{ printers.returned }}
    .row.collapse
      .small-3.column
        span.alert-box Scanners
      .small-3.column
        span.alert-box.secondary {{ scanners.made }}
      .small-3.column
        span.alert-box.secondary {{ scanners.shipped }}
      .small-3.column
        span.alert-box.secondary {{ scanners.returned }}
    .row.collapse
      .small-3.column
        span.alert-box Tablets
      .small-3.column
        span.alert-box.secondary {{ tablets.made }}
      .small-3.column
        span.alert-box.secondary {{ tablets.shipped }}
      .small-3.column
        span.alert-box.secondary {{ tablets.returned }}
    h4.text-left Details
    .row.collapse
      .small-3.column
        span.prefix Product Type
      .small-3.column.end
        select(ng-model="productType")
          option(value="") All
          option(value="printer") Printer
          option(value="scanner") Scanner
          option(value="tablet") Tablet
    .row.scrollable
      table
        thead
          tr
            th Serial Number
            th Status
            th Date Created
            th Num of Services
            th Current Cutomer
            th Previous Customer
        tbody
          tr(ng-repeat="machine in machines | filter: { machineType: productType }")
            td {{ machine.id }}
            td {{ machine.machineStatus }}
            td {{ machine.dateManufactured }}
            td {{ machine.numOfServices }}
            td {{ machine.ownedBy }}
            td {{ machine.prevCust }}
    .row.collapse
      h3.text-left Cartridges and Filaments
      h4.text-left Overview
      .small-3.column
         span.prefix Cartridge-1
      .small-3.column
        input(type="text" ng-model="cartridges.made" placeholder="Made" disabled)
      .small-3.column
        input(type="text" ng-model="cartridges.made" placeholder="Made" disabled)
      .small-3.column
        input(type="text" ng-model="cartridges.made" placeholder="Made" disabled)
    .row.collapse
      .small-3.column
        span.prefix Cartridge-10
      .small-3.column
        input(type="text" ng-model="cartridges.made" placeholder="Made" disabled)
      .small-3.column
        input(type="text" ng-model="cartridges.made" placeholder="Made" disabled)
      .small-3.column
        input(type="text" ng-model="cartridges.made" placeholder="Made" disabled)
    .row.collapse
      .small-3.column
        span.prefix Filaments-1kg
      .small-3.column
        input(type="text" ng-model="cartridges.made" placeholder="Made" disabled)
      .small-3.column
        input(type="text" ng-model="cartridges.made" placeholder="Made" disabled)
      .small-3.column
        input(type="text" ng-model="cartridges.made" placeholder="Made" disabled)
    .row
      .small-12.column.button Export as CSV
    .row
      h3.text-left Customers
      .small-12.column.button Generate Customer Report

