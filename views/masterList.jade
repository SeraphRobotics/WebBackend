extends layout
block body
  h1.text-center Master List
  .large-10.column.large-centered(ng-controller="masterList")
    small.error(ng-if="genErr") {{ genErr }}
    .row.scrollable
      table
        thead
          tr
            th Name
            th Part Number
            th Vendor
            th Lead Time
            th Number in Stock
            th Number Per Batch
            th Number Per Printer
            th Number Per Scanner
            th Number Per Cartridge
            th Number Per Filament
        tbody
          tr(ng-repeat="part in parts" ng-click="editPart(part, $index)")
            td {{ part.name }}
            td {{ part.id }}
            td {{ part.vendor }}
            td {{ part.leadTime }}
            td {{ part.numInStock }}
            td {{ part.numPerBatch }}
            td {{ part.numPerPrinter }}
            td {{ part.numPerScanner }}
            td {{ part.numPerCartridge }}
            td {{ part.numPerFilament }}
    .row
      .button.small.expand(ng-click="addNew()") Create Component
  script(type="text/ng-template" id="editPartModal.html")
    include editPartModal
